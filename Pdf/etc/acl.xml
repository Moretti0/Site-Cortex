<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Cortex_Pdf::config" title="Cortex PDF Configuration" sortOrder="50" />
                        </resource>
                    </resource>
                </resource>
            </resource>
            <resource id="Cortex_Pdf::pdf" title="Cortex PDF" sortOrder="100">
                <resource id="Cortex_Pdf::templates" title="Templates" sortOrder="10">
                    <resource id="Cortex_Pdf::templates_view" title="View Templates" sortOrder="10"/>
                    <resource id="Cortex_Pdf::templates_create" title="Create Templates" sortOrder="20"/>
                    <resource id="Cortex_Pdf::templates_edit" title="Edit Templates" sortOrder="30"/>
                    <resource id="Cortex_Pdf::templates_delete" title="Delete Templates" sortOrder="40"/>
                </resource>
                <resource id="Cortex_Pdf::statistics" title="Statistics" sortOrder="20">
                    <resource id="Cortex_Pdf::statistics_view" title="View Statistics" sortOrder="10"/>
                </resource>
                <resource id="Cortex_Pdf::history" title="History" sortOrder="30">
                    <resource id="Cortex_Pdf::history_view" title="View History" sortOrder="10"/>
                    <resource id="Cortex_Pdf::history_delete" title="Delete History" sortOrder="20"/>
                </resource>
            </resource>
        </resources>
    </acl>
</config> 